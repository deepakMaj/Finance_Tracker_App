<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Current Price</th>
      <% if @user.id == current_user.id %>
      <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_stocks.each do |stocks| %>
      <tr>
        <td><%= stocks.name%></td>
        <td><%= stocks.ticker%></td>
        <td><%= stocks.last_price%></td>
        <% if @user.id == current_user.id %>
          <td><%= link_to "Delete this stock",user_stock_path(stocks), method: :delete,
                  data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
